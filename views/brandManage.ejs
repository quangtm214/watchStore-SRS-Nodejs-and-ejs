<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css"
    />
    <title><%= title %></title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function () {
        $("#showAddModal").click(function () {
          $(".addModal").addClass("is-active");
        });
        $(".modal-close, .modal-background").click(function () {
          $(".addModal").removeClass("is-active");
        });
        $("[id^='showEditModal-']").click(function () {
          const brandId = $(this).data("id");
          $(`.editModal-${brandId}`).addClass("is-active");
        });
        $(".modal-close, .modal-background").click(function () {
          const brandId = $(this).data("id");
          $(`.editModal-${brandId}`).removeClass("is-active");
        });
      });
    </script>
  </head>
  <body>
    <%- include('./navbar.ejs'); %>
    <section class="section">
      <div class="container">
        <h1 class="title"><%= title %></h1>
        <a id="showAddModal" class="button is-primary">Add Brand</a>
        <table class="table is-striped is-bordered is-hoverable">
          <thead>
            <tr>
              <th>Number</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% brands?.forEach((brand, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= brand.brandName %></td>
              <td>
                <a
                  id="showEditModal-<%= brand.id %>"
                  data-id="<%= brand.id %>"
                  class="button is-primary"
                  >Edit</a
                >
                <a href="/brand/<%= brand.id %>" class="button is-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <div class="modal editModal-<%= brand.id %>">
              <div class="modal-background" data-id="<%= brand.id %>"></div>
              <div class="modal-content">
                <!-- Any other Bulma elements you want -->
                <div class="box">
                  <h1 class="title">Edit Brand</h1>
                  <form action="/brands/edit/<%= brand.id %>" method="post">
                    <div class="field">
                      <label class="label">Brand Name</label>
                      <div class="control">
                        <input
                          class="input"
                          type="text"
                          name="brandName"
                          value="<%= brand.brandName %>"
                          placeholder="Enter brand name"
                          required
                        />
                      </div>
                    </div>
                    <div class="field is-grouped">
                      <div class="control">
                        <button type="submit" class="button is-link">
                          Submit
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <button
                data-id="<%= brand.id %>"
                class="modal-close is-large"
                aria-label="close"
              ></button>
            </div>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
    <div class="modal addModal">
      <div class="modal-background"></div>
      <div class="modal-content">
        <!-- Any other Bulma elements you want -->
        <div class="box">
          <h1 class="title">Add New Brand</h1>
          <form action="/brands" method="post">
            <div class="field">
              <label class="label">Brand Name</label>
              <div class="control">
                <input
                  class="input"
                  type="text"
                  name="brandName"
                  placeholder="Enter brand name"
                  required
                />
              </div>
            </div>
            <div class="field is-grouped">
              <div class="control">
                <button type="submit" class="button is-link">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
    </div>
  </body>
</html>
